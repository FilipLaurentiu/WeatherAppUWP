<Page x:ConnectionId='1' xmlns:my="using:Windows.UI.Xaml.Controls.Maps" 
    x:Class="RemakeWindowsWeather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RemakeWindowsWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:RemakeWindowsWeather.ViewModels"
    mc:Ignorable="d"
    x:Name="MyPage">

    <Page.Resources>
        <vm:CommandViewModel x:Key="cmv" />
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button x:ConnectionId='2' HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Height="30"
                    Width="120"
                    Content="Get Weather"
                    Command="{Binding ShowWeather, Source={StaticResource cmv}}"
                                        />
            <TextBlock x:ConnectionId='3' Name="WeatherCondition" 
                       Margin="0,20,0,20"
                       Text="{Binding WeatherProp, Source={StaticResource cmv},Mode=TwoWay}"
                       />
            <my:MapControl x:ConnectionId='4' MapServiceToken="4eVYvXhSZI7eg5FlYs0N~hz7aZatzxyMPDMf5wjDNwA~Ap9xA0xecTMAYh8JjfwiriWQ6Vp-Z0-foCmn9R_SueCDpzd176aBTNZDJQS39_qS"
                           Name="MyMap"
                           Height="200" 
                          />
            <TextBox x:ConnectionId='5' Name="CitySearch"
                     PlaceholderText="Search for weather.."
                     Margin="0,20,0,20"
                     Width="300"/>
           
            <Button x:ConnectionId='6' Width="120"
                    Height="30"
                                          
                    Content="Get Weather"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    />
            <TextBlock x:ConnectionId='7' Name="CityNameTxtBlock"
                       />
        </StackPanel>
    </Grid>
</Page>

